<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:layout_marginTop="0dp"
tools:context=".VibeJukeboxMainActivity" >

<Button
    android:id="@+id/joinButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="220dp"
    android:minHeight="50dp"
    android:onClick="joinJukebox"
    android:text="@string/Join_JukeBox_Button"
    android:background="@color/vibe_blue"
    android:textColor="@color/white"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="144dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/sky_blue"
    android:textColor="@color/white"
    android:minWidth="220dp"
    android:minHeight="50dp"
    android:onClick="goToJukebox"
    android:text="@string/create_new_jukebox"
    android:id="@+id/createJukeboxButton"
    android:layout_below="@+id/nearbyJukeboxesTextView"
    android:layout_alignLeft="@+id/joinButton"
    android:layout_alignStart="@+id/joinButton"
    android:layout_marginTop="97dp" />

<TextView
    android:id="@+id/nearbyJukeboxesTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/joinButton"
    android:layout_marginTop="24dp"
    android:layout_centerHorizontal="true"/>

</RelativeLayout>
