<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >


    <TextView
        android:id="@+id/LogInPremiumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:text="@string/to_log_in_spotify" />

    <Button
        android:id="@+id/LogInSpotifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LogInPremiumTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@color/vibe_orange"
        android:minWidth="300dp"
        android:minHeight="45dp"
        android:text="@string/log_in_spotify_button"
        android:textColor="@android:color/white"
        android:onClick="logInSpotify"/>

</RelativeLayout>